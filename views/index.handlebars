<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button" />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search">搜尋</i></button>
          </div>
        </div>

        <div class="col-4">
          <div class="input-group">
            <span class="input-group-text" style="background-color: #9b4b4b; color: white;">排序方式</span>
            <select class="form-select" onchange="this.form.submit()" name="sort" aria-label="Default select example">
              <option value="1">A to Z</option>
              <option value="2">Z to A</option>
              <option value="3">類別</option>
              <option value="4">地區</option>
          </div>
          </select>
        </div>
      </form>
    </div>
    <a href="/restaurants/new"><button class="btn btn-primary mb-2">新增餐廳</button></a>

  </div>
</div>



<!-- restaurant list -->
<div class="container mt-5 text-nowrap">
  <div class="row ">
    <div class="col-md-8 col-12 mx-auto">
      <div class="row row-cols-1 row-cols-md-3">
        <!-- 在這跑回圈顯示資料 -->
        {{#each restaurants}}
        <div class="col">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>
                  {{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="container mt-5">
                  <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
                  <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm">Details</button></a>

                  <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-outline-dark btn-sm">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>